{
  "apps": [
    {
      "name": "lumira-api",
      "script": "./apps/api-backend/dist/server.js",
      "cwd": "/app",
      "env": {
        "NODE_ENV": "production",
        "PORT": "3001",
        "LOG_LEVEL": "info",
        "REQUEST_ID_HEADER": "x-request-id"
      },
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "max_memory_restart": "1G",
      "max_restarts": 5,
      "min_uptime": "10s",
      "merge_logs": true,
      "combine_logs": true,
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "log_type": "json",
      "out_file": "/app/logs/combined.log",
      "error_file": "/app/logs/error.log",
      "log_file": "/app/logs/combined.log",
      "time": true,
      "autorestart": true,
      "kill_timeout": 5000,
      "wait_ready": true,
      "listen_timeout": 8000
    }
  ]
}
