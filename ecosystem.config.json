{
  "apps": [
    {
      "name": "lumira-api",
      "script": "./apps/api-backend/dist/server.js",
      "cwd": "/app",
      "env": {
        "NODE_ENV": "production",
        "PORT": "3000"
      },
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "max_memory_restart": "1G",
      "max_restarts": 5,
      "min_uptime": "10s",
      "autorestart": true,
      "kill_timeout": 5000,
      "listen_timeout": 8000,
      "merge_logs": true,
      "combine_logs": true,
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "out_file": "/dev/stdout",
      "error_file": "/dev/stderr",
      "log_file": "/dev/null",
      "time": true
    }
  ]
}
