{
  "apps": [
    {
      "name": "lumira-api",
      "script": "./apps/api-backend/dist/server.js",
      "cwd": "/app",
      "env": {
        "NODE_ENV": "production",
        "PORT": "3001"
      },
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "max_memory_restart": "1G",
      "error_file": "./logs/api-error.log",
      "out_file": "./logs/api-out.log",
      "log_file": "./logs/api-combined.log",
      "merge_logs": true,
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z"
    }
  ]
}
