{
  "name": "oracle-lumira",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"cd apps/api-backend && npm run dev\" \"cd apps/main-app && npm run dev\"",
    "dev:main": "cd apps/main-app && npm run dev",
    "dev:api": "cd apps/api-backend && npm run dev",
    "dev:desk": "cd apps/expert-desk && npm run dev",
    "build": "cd apps/main-app && npm run build",
    "build:main": "cd apps/main-app && npm run build",
    "build:desk": "cd apps/expert-desk && npm run build",
    "build:all": "npm run build:main && npm run build:desk",
    "docker:build": "docker build -f apps/main-app/Dockerfile -t oracle-main .",
    "docker:run": "docker run -p 3000:80 oracle-main",
    "install:main": "cd apps/main-app && npm install",
    "install:desk": "cd apps/expert-desk && npm install",
    "install:all": "npm run install:main && npm run install:desk",
    "test:e2e": "playwright test",
    "test:webhook": "node qa-tests/stripe-webhook-qa.cjs"
  },
  "workspaces": [
    "apps/main-app",
    "apps/expert-desk",
    "apps/shared"
  ],
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/node": "^20.0.0",
    "concurrently": "^8.0.0",
    "playwright": "^1.48.2"
  },
  "dependencies": {
    "@stripe/react-stripe-js": "^4.0.0",
    "@stripe/stripe-js": "^7.9.0",
    "bcryptjs": "^3.0.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb-memory-server": "^10.1.4",
    "mongoose": "^8.18.0"
  }
}
