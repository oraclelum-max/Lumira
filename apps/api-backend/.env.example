# Database Configuration
MONGODB_URI=mongodb://localhost:27017/lumira-mvp

# Server Configuration
PORT=3001
NODE_ENV=production
FRONTEND_URL=https://oraclelumira.com

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters-long
JWT_EXPIRES_IN=7d

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_from_stripe_dashboard

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# AWS S3 Configuration
S3_ACCESS_KEY=your_aws_access_key_id
S3_SECRET_KEY=your_aws_secret_access_key
S3_REGION=eu-west-1
S3_BUCKET_NAME=lumira-uploads
S3_ENDPOINT=https://minio.example.com
S3_FORCE_PATH_STYLE=true

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_MAX_FILES=5
LOG_MAX_SIZE=20m
