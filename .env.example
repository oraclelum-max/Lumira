# ===========================================
# ORACLE LUMIRA - CONFIGURATION PRODUCTION
# ===========================================

# Application Core
NODE_ENV=production
VITE_APP_NAME=Oracle Lumira
VITE_APP_VERSION=1.0.0
COMMIT_SHA=                                    # Auto-populated by CI/CD

# Server Configuration
PORT=3001                                      # Backend API port
FRONTEND_URL=https://oraclelumira.com          # Frontend base URL for CORS/redirects
API_BASE_URL=https://oraclelumira.com/api      # API base URL for frontend
DESK_HOSTNAME=desk.oraclelumira.com            # Expert desk hostname

# Security & Auth
JWT_SECRET=                                    # REQUIRED: 32+ chars, cryptographically secure
JWT_EXPIRES_IN=7d                             # Token expiration
CORS_ORIGIN=https://oraclelumira.com,https://desk.oraclelumira.com  # Allowed origins (comma-separated)
ENABLE_DEBUG_ROUTES=false                      # NEVER true in production

# Database
MONGODB_URI=                                   # REQUIRED: mongodb://user:pass@host:port/db
MONGO_ROOT_PASSWORD=                           # MongoDB root password for Docker

# Stripe Payments (REQUIRED)
STRIPE_SECRET_KEY=                            # sk_live_... for production, sk_test_... for dev
STRIPE_WEBHOOK_SECRET=                        # whsec_... from Stripe dashboard
VITE_STRIPE_PUBLIC_KEY=                       # pk_live_... for frontend, pk_test_... for dev

# Email Service (Optional)
SENDGRID_API_KEY=                             # SG.xxx for transactional emails
FROM_EMAIL=oracle@oraclelumira.com            # Sender email address

# File Storage (Optional)
AWS_S3_BUCKET=oracle-lumira-files             # S3 bucket name for file uploads
AWS_ACCESS_KEY_ID=                            # AWS access key ID
AWS_SECRET_ACCESS_KEY=                        # AWS secret access key
AWS_REGION=eu-west-3                          # AWS region

# CRM Integration (Optional)
VITE_DOLIBARR_URL=https://crm.oraclelumira.com  # Dolibarr CRM URL
VITE_DOLIBARR_API_KEY=                        # Dolibarr API token

# Automation (Optional)
N8N_WEBHOOK_URL=https://n8n.oraclelumira.com/webhook/lumira-assistant  # n8n webhook URL
N8N_TOKEN=                                    # n8n authentication token
OPENAI_API_KEY=                               # sk-... OpenAI API key for AI features

# Performance & Monitoring
LOG_LEVEL=info                                # Logging level: error, warn, info, debug
RATE_LIMIT_WINDOW_MS=900000                   # Rate limiting window (15 minutes)
RATE_LIMIT_MAX_REQUESTS=100                   # Max requests per window
UPLOAD_MAX_SIZE=10485760                      # Max file upload size (10MB)

# Development Only (Never use in production)
VITE_API_URL=http://localhost:3001/api        # Local dev API URL
